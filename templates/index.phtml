					<input id="productName" name="name" type="text" disabled placeholder="Name" class="form-control input-md" required="">
				</div>
			</div>
			
			<!-- Text input-->
			<div class="form-group">
				<label class="col-md-4 control-label" for="price">Price</label>
				<div class="col-md-4">
					<input id="productPrice" name="price" type="text" disabled placeholder="Price" class="form-control input-md" required="">
				</div>
			</div>
			
			<!-- Select Basic -->
			<div class="form-group">
				<label class="col-md-4 control-label" for="country">Select Quantity</label>
				<div class="col-md-4">
					<select name="quantity" id="quantity" required="" class="form-control">
						<option value="0">Select Quantity</option>
						<option value="1" selected>1</option>
