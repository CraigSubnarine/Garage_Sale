						<option value="3">3</option>
						<option value="4">4</option>
					</select>
				</div>
			</div>
			
			
			
			<!-- Button -->
			<div class="form-group">
				<label class="col-md-4 control-label" for="saveBnt"></label>
				<div class="col-md-4">
					<button id="addCartBtn" name="saveBnt" class="btn btn-primary" title="Add to Cart"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
